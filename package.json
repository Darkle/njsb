{
  "name": "njsb",
  "version": "0.1.0",
  "description": "Minimal skeleton for a LightScript app",
  "private": true,
  "scripts": {
    "watch:server": "cross-env NODE_ENV=development rollup --config rollup.config.server.js -w",
    "watch:web": "cross-env NODE_ENV=development rollup --config rollup.config.web.js -w",
    "build:dev": "cross-env NODE_ENV=development rollup --config rollup.config.server.js && cross-env NODE_ENV=development rollup --config rollup.config.web.js",
    "build:prod": "cross-env NODE_ENV=production rollup --config rollup.config.server.js && cross-env NODE_ENV=production rollup --config rollup.config.web.js",
    "nodemon": "nodemon src/server/index.js",
    "bs": "browser-sync start --server dist --files dist",
    "watch": "npm-run-all build:dev --parallel --continue-on-error watch:*",
    "startDev": "npm-run-all build:dev --parallel --continue-on-error watch:* nodemon bs",
    "start":"node src/server/index.js",
    "lint": "eslint --ext .js,.lsc src"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/runtime": "^7.1.2",
    "browser-sync": "^2.24.7",
    "cross-env": "^5.2.0",
    "eslint": "^5.6.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint_d": "^7.1.1",
    "less": "^3.8.1",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-postcss": "^1.6.2",
    "stylus": "^0.54.5"
  },
  "dependencies": {
    "@lightscript/babel-preset": "^4.0.0-alpha.18",
    "@lightscript/eslint-plugin": "^4.0.0-alpha.18",
    "@lightscript/runtime": "^0.1.1",
    "express": "^4.16.3",
    "rollup": "^0.66.3"
  }
}
